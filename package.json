{
  "name": "prompter-extension",
  "version": "1.0.0",
  "description": "Chrome extension for formatting text with AI templates",
  "type": "module",
  "scripts": {
    "build": "npm run build:content",
    "build:content": "node scripts/build-content.js",
    "dev": "npm run build && npm run watch",
    "watch": "node scripts/watch.js",
    "clean": "rimraf dist/",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "jest",
    "validate": "npm run lint && npm run test"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "chokidar": "^3.5.0"
  },
  "dependencies": {
    "insert-text-at-cursor": "^0.3.0"
  },
  "files": [
    "src/",
    "dist/",
    "manifest.json",
    "popup.html",
    "popup.css"
  ],
  "keywords": [
    "chrome-extension",
    "ai",
    "text-formatting",
    "templates",
    "productivity"
  ],
  "author": "Prompter Extension Team",
  "license": "MIT"
}
